%li.message-list__item
  .message-list__item--header
    %span.username
      = message.user.name
    %span.date
      = get_datetime_jp(message.created_at)
  .message-list__item--body
    - if message.image
      %p.image
        = link_to image_tag(message.image.thumb), "#{message.image}", target: '_blank'
    %p.text
      = message.message
