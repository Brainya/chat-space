.contents
  = render 'chats/left_column'
  .contents--right
    .group-info
      .group-info__name
        = @group.name
      .group-info__members
        = "Members: #{@users.pluck(:name).join(", ")}"
      .group-info__edit-btn
        = link_to "Edit", edit_group_path, id: @group.id
    %ul.message-list
      %li.message-list__item
        .message-list__item--header
          %span.username
            tarou
          %span.date
            2017/01/01 00:00:00
        .message-list__item--body
          %p.text
            good bye world
      %li.message-list__item
        .message-list__item--header
          %span.username
            takashi
          %span.date
            2017/01/01 00:00:00
        .message-list__item--body
          %p.text
            hello world
    .message-input
      .message-input__form
        = form_for [@group, @message] do |f|
          = f.text_field :message, placeholder: "type a message", class: "message-input__form--textarea", size: "90"
          %i.message-input__form--select-pic.fa.fa-picture-o.fa-lg
          = f.submit "Send", class: "message-input__form--send-btn"
